<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTonyStark"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tony_stark"
            android:layout_margin="20dp" />
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tony Stark"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgTonyStark"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tony@starkindustries.com"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtName"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/txtPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="91+ 11155555"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtEmail"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"

            />

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSteveRogers"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/captain_america"
            android:layout_margin="20dp" />
        <TextView
            android:id="@+id/txtNameSteve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steve Rogers"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgSteveRogers"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtEmailSteve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="steve@starkindustries.com"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgSteveRogers"
            android:layout_below="@id/txtNameSteve"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/txtPhoneNumberSteve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="91+ 22255555"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgSteveRogers"
            android:layout_below="@id/txtEmailSteve"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"

            tools:ignore="UnknownId" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgThor"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:src="@drawable/thor" />

        <TextView
            android:id="@+id/txtNameThor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgThor"
            android:text="Thor Odinson"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmailThor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNameThor"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgThor"
            android:text="thor@starkindustries.com"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPhoneNumberThor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEmailThor"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgThor"
            android:text="91+ 33355555"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBruceBanner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/hulk"
            android:layout_margin="20dp" />
        <TextView
            android:id="@+id/txtNameBruce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bruce Banner"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgBruceBanner"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtEmailBruce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bruce@starkindustries.com"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgBruceBanner"
            android:layout_below="@id/txtNameBruce"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/txtPhoneNumberBruce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="91+ 44455555"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgBruceBanner"
            android:layout_below="@id/txtEmailBruce"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgblackpanther"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:src="@drawable/black_panther" />

        <TextView
            android:id="@+id/txtNamePanther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/imgblackpanther"
            android:text="T Challa"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmailPanther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNamePanther"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgblackpanther"
            android:text="tchalla@starkindustries.com"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPhoneNumberPanther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEmailPanther"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgblackpanther"
            android:text="91+ 55555555"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"

            />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgNatasha"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/widow"
            android:layout_margin="20dp" />
        <TextView
            android:id="@+id/txtNamewidow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natasha Romanova"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgNatasha"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txtEmailwidow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="natasha@starkindustries.com"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgNatasha"
            android:layout_below="@id/txtNamewidow"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/txtPhoneNumberwidow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="91+ 66655555"
            android:textSize="18sp"
            android:layout_toRightOf="@id/imgNatasha"
            android:layout_below="@id/txtEmailwidow"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"

            />

    </RelativeLayout>



</LinearLayout>

</ScrollView>